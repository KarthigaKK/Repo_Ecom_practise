package JavaPrograms;

import java.util.HashMap;

public class CountCharacterOccurance {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String str="aaabbbcccddd";

		duplicateWordsInGivenString(str);
	}

	private static void duplicateWordsInGivenString(String str) {
		// TODO Auto-generated method stub
		HashMap<Character,Integer> charAndCount=new HashMap<Character,Integer>();
		
		for(int i=0;i<str.length();i++)
		{
			if(charAndCount.containsKey(str.charAt(i)))
			{
				System.out.println(charAndCount.get(str.charAt(i)));
				charAndCount.put(str.charAt(i),charAndCount.get(str.charAt(i))+1);
			}
			else
			{
				charAndCount.put(str.charAt(i), 1);
			}
		}
		
		System.out.println(charAndCount);
		
	}

}
