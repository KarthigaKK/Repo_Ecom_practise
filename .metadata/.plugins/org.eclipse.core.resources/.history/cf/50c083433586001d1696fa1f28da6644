import java.util.Collection;
import java.util.List;

public class ApplicationHotel {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Rooms room1=new Rooms("oxford","suite",3,125.00);
		Rooms room2=new Rooms("Stanford","private",1,400.00);
		Rooms room3=new Rooms("IIM","guest",3,125.00);
		
		Collection<Rooms> room=List.of(room1,room2,room3);
		
		double rate=getPotentialRevenue(room);
		System.out.println(rate);
	}
	
	public static double getPotentialRevenue(Collection<Rooms> room)
	{
		return room.stream()
				.mapToDouble(r->r.getRate())
				.sum();
	}

}
